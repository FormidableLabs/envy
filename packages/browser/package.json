{
  "name": "@envy/browser",
  "version": "0.1.1",
  "description": "Envy Web UI",
  "source": [
    "src/index.html"
  ],
  "type": "module",
  "repository": "https://github.com/FormidableLabs/envy.git",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"yarn start:wss\" \"yarn start:ui\"",
    "start:wss": "node ./src/scripts/startCollector.cjs",
    "start:ui": "parcel src/index.html --host localhost --port 9998 --hmr-port 9997 --no-cache --log-level error",
    "test": "jest",
    "prebuild": "rimraf dist",
    "build": "tsc && parcel build",
    "lint": "tsc --noEmit && eslint ./src --ext .ts,.tsx"
  },
  "dependencies": {
    "@envy/client": "0.1.1",
    "@envy/core": "0.2.0",
    "chalk": "^4.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "react-json-view": "^1.21.3",
    "ws": "^8.14.1",
    "xml-formatter": "^3.5.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/ws": "^8.5.5",
    "autoprefixer": "^10.4.15",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "parcel": "^2.9.3",
    "postcss": "^8.4.29",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.1.1"
  },
  "browserslist": [
    ">0.2%",
    "not ie <= 11"
  ],
  "staticFiles": {
    "staticPath": [
      "packages/browser/static"
    ]
  }
}
