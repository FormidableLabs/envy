{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,
    "target": "ES2022",
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": ["src/**/*", "index.js"]
}
